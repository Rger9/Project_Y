<Window x:Class="Y.Vista.Publicar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Y.Vista"
        mc:Ignorable="d"
        Title="Publicar" Height="300" Width="600">
    <Grid Background="#FF000531" Margin="0,0,0,-16">
        <Label Content="PUBL" HorizontalAlignment="Left" Margin="64,29,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial Black" FontSize="22"/>
        <Grid Margin="55,64,55,46">
            <TextBox Name="TxtBoxTitol" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="470" FontSize="20" FontWeight="Bold" Text="TÍTOL" GotFocus="TxtBoxTitol_GotFocus" Foreground="Gray" LostFocus="TxtBoxTitol_LostFocus"/>
            <TextBox Name="TxtBoxCos" HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" Text="Escriu la teva publicació aquí" VerticalAlignment="Top" Width="470" Height="94" GotFocus="TxtBoxCos_GotFocus" Foreground="Gray" LostFocus="TxtBoxCos_LostFocus"/>
            <TextBox Name="TxtBoxEtiqueta" HorizontalAlignment="Center" Margin="0,146,0,0" TextWrapping="Wrap" Text="etiqueta1, etiqueta2, etiqueta3..." VerticalAlignment="Top" Width="470" GotFocus="TxtBoxEtiqueta_GotFocus" Foreground="Gray" LostFocus="TxtBoxEtiqueta_LostFocus"/>
        </Grid>
        <Label Content="CAR" HorizontalAlignment="Left" Margin="162,29,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial Black" FontSize="22"/>
        <Button Name="BtnPublicar" Content="AFEGIR PUBLICACIÓ" Margin="0,238,0,0" Click="BtnPublicar_Click"/>
        <Image HorizontalAlignment="Left" Height="38" Margin="131,27,0,0" VerticalAlignment="Top" Width="38" Source="/Vista/logoBlanc_Y.png" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
    </Grid>
</Window>
