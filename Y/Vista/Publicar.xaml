<Window x:Class="Y.Vista.Publicar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Y.Vista"
        mc:Ignorable="d"
        Title="Publicar" Height="300" Width="600">
    <Grid Background="#FF000531">
        <Label Content="PUBL" HorizontalAlignment="Left" Margin="64,29,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial Black" FontSize="22"/>
        <Grid Margin="55,64,55,46">
            <TextBox Name="TxtBoxTitol" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="470" FontSize="20" FontWeight="Bold"/>
            <TextBox Name="TxtBoxCos" HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="470" Height="94"/>
            <TextBox Name="TxtBoxEtiqueta" HorizontalAlignment="Center" Margin="0,146,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="470"/>
        </Grid>
        <Image Margin="127,20,428,220" Source="/logoBlanc_Y.png" Stretch="Fill"/>
        <Label Content="CAR" HorizontalAlignment="Left" Margin="162,29,0,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="White" FontWeight="Bold" FontFamily="Arial Black" FontSize="22"/>
        <Button Name="BtnPublicar" Content="AFEGIR PUBLICACIÓ" Margin="0,238,0,0" Click="BtnPublicar_Click"/>
    </Grid>
</Window>
