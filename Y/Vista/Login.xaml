<Window x:Name="WindowLogIn" x:Class="Y.Vista.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Y.Vista"
        mc:Ignorable="d"
        Title="Log-in" Height="350" Width="300">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
                <GradientStop Color="#FF070028" Offset="1"/>
                <GradientStop Color="#FF5A4D92" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox x:Name="TxtBoxUser" HorizontalAlignment="Left" Margin="106,78,0,0" TextWrapping="Wrap" Text="Usuari" VerticalAlignment="Top" Width="128" Height="27" Background="{x:Null}" BorderBrush="Black" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Dubai Medium" FontSize="16" GotFocus="TxtBoxUser_GotFocus"/>
        <Button x:Name="BtnLogin" Content="logYn" HorizontalAlignment="Center" Margin="0,170,0,0" VerticalAlignment="Top" Height="34" Width="68" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Dubai Medium" FontSize="18" BorderThickness="2,2,2,2" Cursor="Hand">
            <Button.Effect>
                <DropShadowEffect Color="White" Direction="0" ShadowDepth="0" Opacity="0.5"/>
            </Button.Effect>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="18"/>
                </Style>
            </Button.Resources>
        </Button>
        <Label Content="No tens compte?" Margin="98,204,98,151" Foreground="White"/>
        <PasswordBox x:Name="PsswdLogIn" HorizontalAlignment="Left" Margin="106,124,0,0" VerticalAlignment="Top" Width="128" Height="27" BorderBrush="Black" Foreground="White" FontFamily="Dubai Medium" FontSize="16" Background="{x:Null}" SelectionBrush="{x:Null}" BorderThickness="2,2,2,2" Password="Contrasenya" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="PsswdLogIn_GotFocus"/>
        <Image HorizontalAlignment="Left" Height="27" Margin="72,78,0,0" VerticalAlignment="Top" Width="28" Source="/Vista/user.png"/>
        <Image HorizontalAlignment="Left" Height="27" Margin="72,124,0,0" VerticalAlignment="Top" Width="28" Source="/Vista/padlock.png"/>
        <Label Content="logYn" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="63" Width="200" FontFamily="Dubai Medium" FontSize="36" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Label x:Name="LabelRegister" Content="No tens compte?" HorizontalAlignment="Center" Margin="0,209,0,0" VerticalAlignment="Top" Foreground="White" FontFamily="Dubai Medium" FontSize="16" Width="128" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Cursor="Hand"/>
    </Grid>
</Window>
