<Window x:Name="WindowRegister" x:Class="Y.Vista.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Y.Vista"
        mc:Ignorable="d"
        Title="Register" Height="383" Width="300" ResizeMode="NoResize">
    <Grid x:Name="MainGrid">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
                <GradientStop Color="#FF070028" Offset="1"/>
                <GradientStop Color="#FF5A4D92" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label Content="reg" HorizontalAlignment="Left" VerticalAlignment="Top" Height="49" Width="72" FontFamily="Dubai Medium" FontSize="36" Padding="5,0,5,0" HorizontalContentAlignment="Center" Grid.RowSpan="1" Grid.ColumnSpan="1" Foreground="White" Margin="71,0,0,0"/>
        <TextBox x:Name="TxtBoxUser" HorizontalAlignment="Left" Margin="102,65,0,0" TextWrapping="Wrap" Text="Usuari" VerticalAlignment="Top" Width="128" Height="27" Background="{x:Null}" BorderBrush="#FF24246A" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Dubai Medium" FontSize="16" GotFocus="TxtBoxUser_GotFocus" LostFocus="TxtBoxUser_LostFocus"/>
        <Button x:Name="BtnRegister" Content="regYster" HorizontalAlignment="Center" Margin="0,300,0,0" VerticalAlignment="Top" Height="34" Width="114" Background="{x:Null}" BorderBrush="White" Foreground="White" FontFamily="Dubai Medium" FontSize="18" BorderThickness="2,2,2,2" Cursor="Hand" Click="BtnRegister_Click">
            <Button.Effect>
                <DropShadowEffect Color="White" Direction="0" ShadowDepth="0" Opacity="0.5"/>
            </Button.Effect>
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="18"/>
                </Style>
            </Button.Resources>
        </Button>
        <PasswordBox x:Name="PsswdRegister" HorizontalAlignment="Left" Margin="102,98,0,0" VerticalAlignment="Top" Width="128" Height="26" BorderBrush="#FF24246A" Foreground="White" FontFamily="Dubai Medium" FontSize="16" Background="{x:Null}" SelectionBrush="{x:Null}" BorderThickness="2,2,2,2" Password="Contrasenya" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="PsswdRegister_GotFocus" LostFocus="PsswdRegister_LostFocus"/>
        <TextBox x:Name="TxtBoxNom" HorizontalAlignment="Left" Margin="102,160,0,0" TextWrapping="Wrap" Text="Nom" VerticalAlignment="Top" Width="128" Height="27" Background="{x:Null}" BorderBrush="#FF24246A" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Dubai Medium" FontSize="16" GotFocus="TxtBoxNom_GotFocus" LostFocus="TxtBoxNom_LostFocus"/>
        <TextBox x:Name="TxtBoxCognom" HorizontalAlignment="Left" Margin="102,192,0,0" TextWrapping="Wrap" Text="Cognom" VerticalAlignment="Top" Width="128" Height="27" Background="{x:Null}" BorderBrush="#FF24246A" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Dubai Medium" FontSize="16" GotFocus="TxtBoxCognom_GotFocus" LostFocus="TxtBoxCognom_LostFocus"/>
        <TextBox x:Name="TxtBoxCorreu" HorizontalAlignment="Left" Margin="102,224,0,0" TextWrapping="Wrap" Text="Correu" VerticalAlignment="Top" Width="128" Height="27" Background="{x:Null}" BorderBrush="#FF24246A" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Dubai Medium" FontSize="16" GotFocus="TxtBoxCorreu_GotFocus" LostFocus="TxtBoxCorreu_LostFocus"/>
        <TextBox x:Name="TxtBoxTelefon" HorizontalAlignment="Left" Margin="102,256,0,0" TextWrapping="Wrap" Text="Telefon" VerticalAlignment="Top" Width="128" Height="27" Background="{x:Null}" BorderBrush="#FF24246A" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Dubai Medium" FontSize="16" GotFocus="TxtBoxTelefon_GotFocus" LostFocus="TxtBoxTelefon_LostFocus"/>
        <PasswordBox x:Name="PsswdRegister2" HorizontalAlignment="Left" Margin="102,129,0,0" VerticalAlignment="Top" Width="128" Height="26" BorderBrush="#FF24246A" Foreground="White" FontFamily="Dubai Medium" FontSize="16" Background="{x:Null}" SelectionBrush="{x:Null}" BorderThickness="2,2,2,2" Password="Contrasenya" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" GotFocus="PsswdRegister2_GotFocus" LostFocus="PsswdRegister2_LostFocus"/>
        <Image HorizontalAlignment="Left" Height="27" Margin="134,14,0,0" VerticalAlignment="Top" Width="28" Source="/Vista/logoBlanc_Y.png"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="71,65,0,0" VerticalAlignment="Top" Width="26" Source="/Vista/userBlanc.png"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="71,114,0,0" VerticalAlignment="Top" Width="26" Source="/Vista/padlock.png"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="71,177,0,0" VerticalAlignment="Top" Width="26" Source="/Vista/id-cardBlanc.png"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="71,224,0,0" VerticalAlignment="Top" Width="26" Source="/Vista/emailBlanc.png"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="71,256,0,0" VerticalAlignment="Top" Width="26" Source="/Vista/telephoneBlanc.png"/>
        <Label Content="ster" HorizontalAlignment="Left" VerticalAlignment="Top" Height="49" Width="72" FontFamily="Dubai Medium" FontSize="36" Padding="5,0,5,0" HorizontalContentAlignment="Center" Grid.RowSpan="1" Grid.ColumnSpan="1" Foreground="White" Margin="158,0,0,0"/>
        <TextBox x:Name="TxtBoxUser_Copiar" HorizontalAlignment="Left" Margin="102,65,0,0" TextWrapping="Wrap" Text="Usuari" VerticalAlignment="Top" Width="128" Height="27" Background="{x:Null}" BorderBrush="#FF24246A" BorderThickness="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Dubai Medium" FontSize="16" GotFocus="TxtBoxUser_GotFocus" LostFocus="TxtBoxUser_LostFocus"/>
    </Grid>
</Window>
